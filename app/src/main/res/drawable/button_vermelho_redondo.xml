<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="3dip" />
            <stroke android:width="3dip" android:color="#830312" />
            <gradient android:angle="-180" android:startColor="#e73f3b"
                android:endColor="#96252d"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#3e5438"/>
            <solid android:color="#160f0f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval">
            <corners android:radius="3dip"/>
            <stroke android:width="3dip" android:color="#1d1e1d"/>
            <gradient android:angle="-180" android:startColor="#a60b0b"
                android:endColor="#f44c73"/>
        </shape>
    </item>
</selector>